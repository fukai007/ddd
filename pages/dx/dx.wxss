  color: #fff;
  font-size: 24rpx;
}
.special {
  color: #ff5f27;
}
/* 上部图片+奖励 */
.success-top, .success-center {
  display: inline-block;
  margin: 44rpx 22% 0;
  width: 56%;
}
.img-wrap .img {
  width: 100%;
}
.reward {
  margin-top: 50rpx;
  font-weight: bold;
}
.reward text {
  margin-right: 30rpx;
  font-size: 36rpx;
}
.icon {
  margin-right: 40rpx;
  width: 140rpx;
  height: 70rpx;
  vertical-align: middle;
}
/* center */
.success-center {
  margin: 90rpx 20% 170rpx;
}
.success-center .img {
  height: 40rpx;
}
.detail {
  margin: 40rpx 0 0;
  text-align: center;
  font-size: 24rpx;
}
/* 操作icon */
.success-bottom {
  text-align: center;
  margin-bottom: 138rpx;
}
.icon-operate {
  margin: 0 48rpx;
  width: 100rpx;
  height: 100rpx;
}
