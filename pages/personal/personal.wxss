  overflow-y: auto;
}
.personnalHeader{
  width: 100%;
  height: 400rpx;
  background: url(https://wmygb.crazydoggy.cn/images/topcard.jpeg);
  background-repeat: no-repeat;
  background-size: cover;
  text-align: center;
}
.userLogo{
  width: 110rpx;
  height: 110rpx;
  background: white;
  border-radius: 50%;
  display: inline-block;
  margin-top: 16rpx;
}
.dogFood{
  min-width: 380rpx;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 40rpx;

}
.dogFoodImg{
