.icon {
  margin-right: 10rpx;
  width: 59rpx;
  height: 38rpx;
  vertical-align: middle;
}
/* 主体列表  */
.section-content {
  padding: 30rpx 20rpx;
  background: #101F26;
  height: calc(100vh - 172rpx);
  overflow-y: auto;
}
.item {
  display: inline-block;
  /* margin-right: 20rpx;
  margin-bottom: 20rpx;
  width: calc(50% - 11rpx); */
  margin-right: 22rpx;
  margin-bottom: 20rpx;
  width: 344rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #F7B401;
}
.section-content .item:nth-child(2n) {
  margin-right: 0;
}
/* item头部 */
.item-top {
  padding: 0 16rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #202020;
}
.logo {
  margin-right: 22rpx;
  width: 60rpx;
  height: 48rpx;
  vertical-align: middle;
}
/* item图片 */
.item-img {
  width: 344rpx;
  height: 402rpx;
}
/* item说明 */
.item-text {
  padding: 0rpx 14rpx 14rpx;
  font-size: 26rpx;
  color: #202020;
}
.item-title {
  font-size: 24rpx;
  height: 52rpx;
}
.item-content {
  height:50rpx;
  line-height:50rpx;
  margin-top:6rpx;
}
.item-btn{
  float: right;
  padding: 0 8rpx;
  margin: 0;
  width: 100rpx;
  height: 50rpx;
  line-height:50rpx;
  font-size: 28rpx;
  color: #fff;
  border-radius:10rpx;
  background:#BDBDBD;
}
.item-btn::after{
    border: 0;
}
.item-primary {
  background: #111E26;
}
.kf{
  position: fixed;
  bottom: 10rpx;
  width: 100vw;
  height: 40rpx;
  text-align: center;
  background-color: #121c27;
}