/* 主体上部 */
.section-top {
  height: 82rpx;
  line-height: 82rpx;
  position: relative;
  background: url(https://wmygb.crazydoggy.cn/images/topcard.jpeg) no-repeat;
  /* background-repeat: no-repeat; */
  background-size: cover;  
  font-size: 24rpx;
  text-align: right;
  color: #fff;
}
.section-top text {
  margin-right: 20rpx;
}
