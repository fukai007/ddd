<!--index.wxml-->
<view class='userInfo-index'>
  <view class='df mx24 mt30'>
    <view class='f1 tac'></view>
    <view class="userinfo">
      <image bindtap="" class="wh130 userIcon" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname h4 fc-fff mt20">{{userInfo.nickName}}</text>
    </view>
    <view class='df f1 fxr'>
        <view class='tar fc-fff h6'>答题规则A</view>
        <view class='ruleIcon'></view>
    </view>
  </view>
</view>
<view class='mainbg ovh'>
  <view class='df fxc mt20'>
    <view class='area-com'><text class='h5 fc-fff'>常规比赛</text></view>
  </view>

  <view class='df fxc mt74 root3d' >
      <view class='l1 cube levelItem' bindtap="toAsk" data-levelid="1" ></view>
  </view>
  <view
    wx:for="{{levelList}}"
    wx:for-index="idx"
    wx:key="levelId"
    wx:for-item="levelInfo"
    >
    <view wx:if="{{levelInfo.levelId <= userInfo.u_level}}" class='df fxc mt20 root3d' bindtap="toAsk">
        <image class="baseLevel cube levelItem"  data-levelid="{{levelInfo.levelId}}" src="{{'https://wxapp.haizeihuang.com/wannengdequan_php/images/LV'+levelInfo.levelId+'.png'}}"></image>
    </view>
    <view wx:else class='df fxyc h300  mt40'>
    </view>

  </view>
</view>
